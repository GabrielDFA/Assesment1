<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/hitungFragment">

    <fragment
        android:id="@+id/hitungFragment"
        android:name="org.d3if3027.assesment1.ui.hitung.HitungFragment"
        tools:layout="@layout/fragment_hitung"
        android:label="Hitung Kalori">
        <action
            android:id="@+id/action_hitungFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_aboutFragment_to_hitungFragment"
            app:destination="@id/hitungFragment"
            />
        <action
            android:id="@+id/action_hitungFragment_to_historiFragment"
            app:destination="@id/historiFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="org.d3if3027.assesment1.ui.AboutFragment"
        android:label="About App"/>
    <fragment
        android:id="@+id/historiFragment"
        android:name="org.d3if3027.assesment1.ui.histori.HistoriFragment"
        android:label="@string/histori"
        tools:layout="@layout/layout_histori"/>
</navigation>